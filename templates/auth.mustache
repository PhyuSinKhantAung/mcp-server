{{#isBearerAuth}}
export function getAuthConfig() {
  const token = process.env.{{authEnvVar}};
  if (!token) {
    return null;
  }
  return {
    type: 'bearer',
    token: token
  };
}

export function getAuthHeaders() {
  const config = getAuthConfig();
  if (!config) {
    return {};
  }
  return {
    'Authorization': `Bearer ${config.token}`
  };
}
{{/isBearerAuth}}
